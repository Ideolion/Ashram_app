<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddYoutubeVideo.AddYoutubeVideo">

    <EditText
        android:id="@+id/YoutubeURL"
        android:layout_width="319dp"
        android:layout_height="41dp"
        android:hint="Ссылка на видео"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/UploadYoutube"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/Color2"
        android:onClick="UploadLink"

        android:text="Отправить ссылку"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/YoutubeURL"
        app:layout_constraintStart_toStartOf="@+id/YoutubeURL"
        app:layout_constraintTop_toBottomOf="@+id/YoutubeURL" />

    <Button
        android:id="@+id/button3"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/Color2"
        android:onClick="back"
        android:text="Назад"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/UploadYoutube"
        app:layout_constraintStart_toStartOf="@+id/UploadYoutube"
        app:layout_constraintTop_toBottomOf="@+id/YoutubeURL" />


</androidx.constraintlayout.widget.ConstraintLayout>